{
  "name": "promptwars/backend",
  "description": "PromptWARS PHP Backend API",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*",
    "ext-pgsql": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "firebase/php-jwt": "^5.4",
    "phpmailer/phpmailer": "^6.9",
    "vlucas/phpdotenv": "^5.6",
    "guzzlehttp/guzzle": "^6.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "PromptWars\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "audit": {
      "ignore": ["PKSA-2kqm-ps5x-s4f5"]
    }
  }
}