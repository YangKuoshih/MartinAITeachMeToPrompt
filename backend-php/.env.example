# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=promptwars
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# JWT Configuration
JWT_SECRET=your_random_secret_key_min_32_characters_long
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=2592000

# AI Provider - LiteLLM (supports OpenAI, Anthropic, Ollama, etc.)
LITELLM_API_KEY=your_api_key_here
LITELLM_BASE_URL=https://api.openai.com/v1
LITELLM_MODEL=gpt-4

# For Ollama (local): LITELLM_BASE_URL=http://localhost:11434/v1 LITELLM_MODEL=llama2
# For Anthropic: LITELLM_BASE_URL=https://api.anthropic.com/v1 LITELLM_MODEL=claude-3-sonnet-20240229

# Email Configuration (optional for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM_EMAIL=noreply@promptwars.com
SMTP_FROM_NAME=PromptWARS

# Application
APP_ENV=development
APP_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log